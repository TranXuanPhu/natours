<main class='main'>
  <div class='singup-form'>
    <h2 class='heading-secondary ma-bt-lg'>Login</h2>
    <form
      name='login'
      action='/users/login'
      method='POST'
      class='form form--login'
    >

      <div class='form__group'>
        <label class='form__label' for='email'>Email address</label>
        <input
          type='text'
          class='form__input'
          id='name'
          type='text'
          name='email'
          placeholder='you@example.com'
          required=''
        />

      </div>
      <div class='form__group ma-bt-md'>
        <label class='form__label' for='password'>Password
          <input
            class='form__input'
            id='password'
            type='password'
            name='password'
            placeholder='••••••••'
            required=''
            minlength='8'
          />
        </label>
      </div>

      <div class='form__group'>
        <button
          type='submit'
          class='btn btn--green'
          id='btn--submit'
        >Login</button>
      </div>
    </form>
  </div>

</main>

<script src='js/user/signup.js'></script>